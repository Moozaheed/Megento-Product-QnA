<script>
require(['jquery'], function($) {
    console.log('‚úÖ ProductQnA JavaScript loaded successfully');
    
    window.openQuestionModal = function() {
        console.log('üîî Opening question modal');
        $('#question-modal').css('display', 'flex');
        $('body').css('overflow', 'hidden');
    };

    window.closeQuestionModal = function() {
        console.log('‚ùå Closing question modal');
        $('#question-modal').css('display', 'none');
        $('body').css('overflow', 'auto');
        $('#question-form')[0].reset();
        $('#qna-form-message').hide();
    };

    window.submitQuestion = function(event) {
        console.log('üìù Submit question function called');
        event.preventDefault();
        
        var form = $(event.target);
        var formData = new FormData(form[0]);
        var messageDiv = $('#qna-form-message');
        var submitBtn = form.find('button[type="submit"]');
        
        // Log form data
        console.log('üì¶ FormData contents:');
        for (var pair of formData.entries()) {
            console.log('  ' + pair[0] + ': ' + pair[1]);
        }
        
        // Disable submit button
        submitBtn.prop('disabled', true).text('<?= $block->escapeJs(__('Submitting...')) ?>');
        
        var ajaxUrl = '<?= $block->escapeUrl($block->getUrl('productqna/question/save')) ?>';
        console.log('üöÄ Sending AJAX request to:', ajaxUrl);
        
        // Send AJAX request
        $.ajax({
            url: ajaxUrl,
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            dataType: 'json',
            success: function(data) {
                console.log('‚úÖ AJAX request successful');
                console.log('üì® Response data:', data);
                messageDiv.show();
                
                if (data.success) {
                    console.log('‚úÖ Question saved successfully:', data.message);
                    messageDiv.removeClass('qna-message-error').addClass('qna-message-success');
                    messageDiv.text(data.message || '<?= $block->escapeJs(__('Your question has been submitted successfully!')) ?>');
                    
                    // Clear form
                    form[0].reset();
                    
                    // Close modal after 2 seconds and reload
                    setTimeout(function() {
                        console.log('üîÑ Reloading page to show new question');
                        closeQuestionModal();
                        location.reload();
                    }, 2000);
                } else {
                    console.log('‚ùå Server returned error:', data.message);
                    messageDiv.removeClass('qna-message-success').addClass('qna-message-error');
                    messageDiv.text(data.message || '<?= $block->escapeJs(__('Unable to submit question. Please try again.')) ?>');
                }
            },
            error: function(xhr, status, error) {
                console.error('‚ùå AJAX request failed');
                console.error('Status:', status);
                console.error('Error:', error);
                console.error('Response:', xhr.responseText);
                console.error('Status code:', xhr.status);
                messageDiv.show();
                messageDiv.removeClass('qna-message-success').addClass('qna-message-error');
                messageDiv.text('<?= $block->escapeJs(__('An error occurred. Please try again.')) ?>');
            },
            complete: function() {
                console.log('üèÅ AJAX request completed');
                submitBtn.prop('disabled', false).text('<?= $block->escapeJs(__('Submit Question')) ?>');
            }
        });
    };

    // Close modal when clicking outside
    $(document).on('click', function(event) {
        if ($(event.target).is('#question-modal')) {
            closeQuestionModal();
        }
    });
});
</script>

