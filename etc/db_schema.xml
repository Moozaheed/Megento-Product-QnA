<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Questions Table -->
    <table name="vendor_product_qna_question" resource="default" engine="innodb" 
           comment="Product Questions Table">
        <column xsi:type="int" name="question_id" unsigned="true" nullable="false" 
                identity="true" comment="Question ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" 
                comment="Product ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" 
                comment="Customer ID"/>
        <column xsi:type="varchar" name="customer_name" nullable="false" length="255" 
                comment="Customer Name"/>
        <column xsi:type="varchar" name="customer_email" nullable="false" length="255" 
                comment="Customer Email"/>
        <column xsi:type="text" name="question_text" nullable="false" 
                comment="Question Text"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" 
                default="0" comment="Status: 0=Pending, 1=Approved, 2=Rejected"/>
        <column xsi:type="int" name="helpful_count" unsigned="true" nullable="false" 
                default="0" comment="Helpful Count"/>
        <column xsi:type="smallint" name="visibility" unsigned="true" nullable="false" 
                default="1" comment="Visibility: 1=Public, 0=Hidden"/>
        <column xsi:type="varchar" name="answer_preference" nullable="false" length="10" 
                default="admin" comment="Answer Preference: ai or admin"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" 
                default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" 
                default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_QUESTION_PRODUCT"
                    table="vendor_product_qna_question" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_QUESTION_CUSTOMER"
                    table="vendor_product_qna_question" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="SET NULL"/>
        
        <index referenceId="IDX_PRODUCT" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="IDX_CUSTOMER" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="IDX_STATUS" indexType="btree">
            <column name="status"/>
        </index>
        <index referenceId="IDX_CREATED" indexType="btree">
            <column name="created_at"/>
        </index>
        <index referenceId="IDX_ANSWER_PREFERENCE" indexType="btree">
            <column name="answer_preference"/>
        </index>
    </table>
    
    <!-- Answers Table -->
    <table name="vendor_product_qna_answer" resource="default" engine="innodb" 
           comment="Product Answers Table">
        <column xsi:type="int" name="answer_id" unsigned="true" nullable="false" 
                identity="true" comment="Answer ID"/>
        <column xsi:type="int" name="question_id" unsigned="true" nullable="false" 
                comment="Question ID"/>
        <column xsi:type="int" name="admin_user_id" unsigned="true" nullable="true" 
                comment="Admin User ID"/>
        <column xsi:type="smallint" name="is_ai_generated" unsigned="true" nullable="false" 
                default="0" comment="Is AI Generated: 0=No, 1=Yes"/>
        <column xsi:type="int" name="ai_answer_id" unsigned="true" nullable="true" 
                comment="AI Answer ID Reference"/>
        <column xsi:type="text" name="answer_text" nullable="false" 
                comment="Answer Text"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" 
                default="1" comment="Status: 0=Hidden, 1=Visible"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" 
                default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" 
                default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="answer_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_ANSWER_QUESTION"
                    table="vendor_product_qna_answer" column="question_id"
                    referenceTable="vendor_product_qna_question" referenceColumn="question_id"
                    onDelete="CASCADE"/>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_ANSWER_ADMIN"
                    table="vendor_product_qna_answer" column="admin_user_id"
                    referenceTable="admin_user" referenceColumn="user_id"
                    onDelete="SET NULL"/>
        
        <index referenceId="IDX_QUESTION" indexType="btree">
            <column name="question_id"/>
        </index>
        <index referenceId="IDX_ADMIN" indexType="btree">
            <column name="admin_user_id"/>
        </index>
    </table>
    
    <!-- Helpful Votes Table -->
    <table name="vendor_product_qna_helpful" resource="default" engine="innodb" 
           comment="Question Helpful Votes Table">
        <column xsi:type="int" name="helpful_id" unsigned="true" nullable="false" 
                identity="true" comment="Helpful ID"/>
        <column xsi:type="int" name="question_id" unsigned="true" nullable="false" 
                comment="Question ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" 
                comment="Customer ID"/>
        <column xsi:type="varchar" name="customer_ip" nullable="true" length="45" 
                comment="Customer IP"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" 
                default="CURRENT_TIMESTAMP" comment="Created At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="helpful_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_HELPFUL_QUESTION"
                    table="vendor_product_qna_helpful" column="question_id"
                    referenceTable="vendor_product_qna_question" referenceColumn="question_id"
                    onDelete="CASCADE"/>
        
        <constraint xsi:type="unique" referenceId="UNQ_QUESTION_CUSTOMER">
            <column name="question_id"/>
            <column name="customer_id"/>
        </constraint>
        
        <index referenceId="IDX_QUESTION" indexType="btree">
            <column name="question_id"/>
        </index>
    </table>
    
    <!-- AI Answers Table -->
    <table name="vendor_product_qna_ai_answer" resource="default" engine="innodb" 
           comment="AI Generated Answers Table">
        <column xsi:type="int" name="ai_answer_id" unsigned="true" nullable="false" 
                identity="true" comment="AI Answer ID"/>
        <column xsi:type="int" name="question_id" unsigned="true" nullable="false" 
                comment="Question ID"/>
        <column xsi:type="varchar" name="ai_model_name" nullable="false" length="100" 
                default="Qwen/Qwen2.5-3B-Instruct" comment="AI Model Name"/>
        <column xsi:type="text" name="ai_answer_text" nullable="false" 
                comment="AI Generated Answer Text"/>
        <column xsi:type="int" name="processing_time_ms" unsigned="false" nullable="true" 
                comment="Processing Time in Milliseconds"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" 
                default="0" comment="Status: 0=Generated, 1=Published"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" 
                default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" 
                default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="ai_answer_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="FK_QNA_AI_ANSWER_QUESTION"
                    table="vendor_product_qna_ai_answer" column="question_id"
                    referenceTable="vendor_product_qna_question" referenceColumn="question_id"
                    onDelete="CASCADE"/>
        
        <constraint xsi:type="unique" referenceId="UNQ_AI_ANSWER_QUESTION_ID">
            <column name="question_id"/>
        </constraint>
        
        <index referenceId="IDX_AI_STATUS" indexType="btree">
            <column name="status"/>
        </index>
    </table>
</schema>
